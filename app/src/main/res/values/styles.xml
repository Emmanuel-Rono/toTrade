<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CurvedRect">
        <item name="cornerSize">4%</item>
    </style>

    <style name="TopCurvedRect">
        <item name="cornerSizeTopRight">4%</item>
        <item name="cornerSizeTopLeft">4%</item>
    </style>

    <style name="LeftCurvedRect">
        <item name="cornerSizeBottomLeft">4%</item>
        <item name="cornerSizeTopLeft">4%</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="backgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="CustomFavChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="backgroundColor">@color/chip_fav_background_color</item>
        <item name="android:textColor">@color/chip_fav_text_color</item>
        <item name="checkedIconTint">@color/chip_fav_text_color</item>
    </style>

    <style name="ClickableTextViewStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextStyle.H0" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="ButtonStyle.Rounded" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/background_button_rounded</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle.Rectangle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/background_button_rectangle</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>
</resources>